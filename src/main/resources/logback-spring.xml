<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_PATH" value="./logs"/>
    <property name="LOG_FILE" value="greenWinitApp"/>
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 기본 설정 -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

    <logger name="com.example.green" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.springframework.web" level="WARN"/>        <!-- 웹 요청 로그 -->
    <logger name="org.springframework.security" level="WARN"/>   <!-- 보안 로그 -->
    <logger name="com.zaxxer.hikari" level="WARN"/>             <!-- 커넥션풀 로그 -->
    <logger name="org.hibernate.SQL" level="ERROR"/>            <!-- DB 로그 -->
</configuration>