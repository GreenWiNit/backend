# 데이터베이스 연결 설정
DB_TYPE=mysql                          # 데이터베이스 유형 (mysql, mariadb, postgresql 등)
DB_HOST=localhost                      # 데이터베이스 호스트 주소
DB_PORT=3306                           # 데이터베이스 포트
DB_NAME=test                           # 데이터베이스 이름
DB_PARAMS=useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC  # JDBC URL 추가 파라미터
DB_USERNAME=root                       # 데이터베이스 사용자 이름
DB_PASSWORD=root                       # 데이터베이스 비밀번호
DB_DRIVER=com.mysql.cj.jdbc.Driver    # JDBC 드라이버 클래스명

# JPA/Hibernate 설정
DB_DDL_AUTO=create-drop              # 스키마 초기화 전략 (create, create-drop, update, validate, none)
BATCH_FETCH_SIZE=100                 # Hibernate 일괄 페치 크기
FORMAT_SQL=false                     # SQL 포맷팅 활성화 여부
DEFER_INIT=false                     # 데이터소스 초기화 지연 여부

# SQL 초기화 설정
SQL_DATA_LOCATION=classpath:db/data.sql  # 초기 데이터 SQL 파일 위치 (비워두면 적용되지 않음)
SQL_INIT_MODE=never                      # SQL 초기화 모드 (always, embedded, never)

# 로깅 설정
LOG_LEVEL_SPRING=INFO                # 스프링 프레임워크 로깅 레벨
LOG_LEVEL_SQL=DEBUG                 # Hibernate SQL 로깅 레벨